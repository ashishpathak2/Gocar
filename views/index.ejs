  <style>
    /* Ensure logos are contained within their containers */
    .cars-brand img {
      height: 2rem;
      /* Fixed height for all screens */
      width: 3rem;
      /* Fixed width for all screens */
      object-fit: contain;
      /* Ensure logos fit within the box */
    }

    /* Adjust logo size for different screen sizes */
    .logo-img {
      max-width: 3rem;
      /* Default size for large screens */
      height: auto;
      /* Maintain aspect ratio */
    }

    @media (max-width: 576px) {
      .logo-img {
        max-width: 2rem;
        /* Smaller size for extra small screens */
      }
    }

    @media (min-width: 576px) and (max-width: 767px) {
      .logo-img {
        max-width: 2.5rem;
        /* Slightly larger size for small screens */
      }
    }

    
    .service-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .service-card img {
            object-fit: cover;
            height: 180px;
        }

        .service-card .card-body {
            text-align: center;
        }

        .service-card .btn {
            color: #ff6600;
            font-weight: bold;
        }

        .btn:hover {
            text-decoration: underline;
        }
  </style>


</head>

